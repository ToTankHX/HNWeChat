platform :ios, '9.0'
inhibit_all_warnings!

def project_pods
	pod 'Masonry', '~> 1.1.0'	    #masonry for autolayout
	pod 'YYModel', '~> 1.0.4'	    #aop for model
	pod 'ReactiveObjC', '~> 3.1.0'	#rac
   	pod 'lottie-ios', '~> 2.1.5'    #lottie-ios AE Animations
	pod 'LSAnimator', '~> 2.1.2'	#oc animation kit
    	pod 'MGJRouter', '~> 0.9.3'     #mgj routes
	pod 'YYWebImage', '~> 1.0.5'	#load/cache image
	pod 'YTKNetwork', '~> 2.0.4'	#network
end

target 'HNWeChat' do
	project_pods
end

target 'HNWeChatTests' do
	project_pods
end

target 'HNWeChatUITests' do
	project_pods
end